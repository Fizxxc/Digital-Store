{
  "version": 2,
  "builds": [
    {
      "src": "public/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/js/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "public/css/*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // HTML Routes
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html"
    },
    {
      "src": "/login",
      "dest": "/public/login.html"
    },
    {
      "src": "/register",
      "dest": "/public/register.html"
    },
    {
      "src": "/checkout",
      "dest": "/public/checkout.html"
    },
    {
      "src": "/product-detail",
      "dest": "/public/product-detail.html"
    },
    
    // Static Assets Routes
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    
    // 404 Handling
    {
      "src": "/404",
      "dest": "/404.html"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404.html"
    }
  ]
}

